<?xml version="1.0" encoding="utf-8"?>

<!--普通回复 不包含想法xxxxxxxxxx-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_comm_feed"
    >
    
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_left"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/iv_icon"
            />



        <com.shixian.android.client.views.FontTextView
            android:singleLine="true"
            android:id="@+id/tv_name"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="#005580"
            android:background="@drawable/text_common_selector"
            android:textSize="@dimen/actor_text_size" />

        <com.shixian.android.client.views.FontTextView
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_name"
            android:id="@+id/tv_type"
            android:layout_alignTop="@id/tv_name"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/actor_text_size"
            android:textColor="#9B9B9B"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"

            />



        <com.shixian.android.client.views.FontTextView
            android:singleLine="true"
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textColor="#005580"
            android:textSize="@dimen/actor_text_size"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="2dp"
            android:background="@drawable/text_common_selector"
            />




        <com.shixian.android.client.views.FontTextView
            android:id="@+id/tv_time"
            android:layout_alignTop="@id/tv_name"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/time_text_size"
            android:textColor="#888888"
            android:layout_marginRight="@dimen/global_left"
            android:layout_gravity="center_vertical"
            />
        
    </RelativeLayout>


    <LinearLayout

        android:layout_marginTop="@dimen/content_top"
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    
    <com.shixian.android.client.views.FontTextView
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/content_text_size"
        android:layout_marginLeft="@dimen/global_left"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginRight="@dimen/global_left"
        android:background="@drawable/text_common_selector"
        />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"


        />

    <!-- android:scaleType="centerInside"-->

    <TextView
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/tv_response"
        android:layout_marginLeft="@dimen/global_left"
        android:layout_marginRight="@dimen/global_left"
        android:background="@drawable/tv_response_bk"
        android:layout_marginTop="5dp"
        android:textColor="#E5E5E5"
        android:text="@string/tv_reply"

        />




    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/global_left"
        android:layout_marginRight="@dimen/global_left"
        android:background="#E5E5E5"
        android:layout_marginTop="@dimen/main_content_top"


        />

</LinearLayout>


