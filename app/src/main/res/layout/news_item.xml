<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/global_left"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <com.shixian.android.client.views.FontTextView
            android:layout_marginLeft="16dp"
            android:maxLength="13"
            android:id="@+id/tv_name"
            android:textColor="#005580"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:textSize="13sp"
            android:background="@drawable/text_common_selector"

            />


        <com.shixian.android.client.views.FontTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            />



        <com.shixian.android.client.views.FontTextView
            android:maxLength="13"
            android:textColor="#005580"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/tv_name"
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_common_selector"
            />





        <TextView
           android:layout_alignTop="@id/tv_name"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/global_right"
            android:textColor="#888888"
            android:textSize="11sp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shixian.android.client.views.FontTextView
        android:lineSpacingMultiplier="1.3"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="@dimen/global_left"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/content_top"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_common_selector"
        />

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#E5E5E5"

        android:layout_marginTop="@dimen/main_content_top"
        />
</LinearLayout>