<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:textColor="#005580"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxx"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:textSize="13sp"

            />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:text="xxxxxx"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            />

        <TextView
            android:textColor="#005580"
            android:id="@+id/tv_post_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxx"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/tv_type"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"
            />

        <TextView
            android:textColor="#005580"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/tv_name"
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxx"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:textColor="#9B9B9B"
            android:layout_below="@id/tv_name"
            android:layout_alignTop="@id/tv_project"
            android:id="@+id/tv_addpri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxx"
            android:layout_toRightOf="@id/tv_project"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:textColor="#005580"
            android:layout_below="@id/tv_name"
            android:layout_alignTop="@id/tv_project"
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxx"
            android:layout_toRightOf="@id/tv_addpri"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"

            />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxx"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="#888888"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:lineSpacingMultiplier="1.3"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#666666"
        />

        <Button
            android:id="@+id/bt_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已通过"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#20C8AF"

            />


    </RelativeLayout>
</LinearLayout>